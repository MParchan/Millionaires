
<div class="text-center p-5">
    <p class="display-3">You Lost</p>
    @if (ViewBag.Guaranteed != null)
    {
        <p class="display-6">You won the guaranteed amount $@ViewBag.Guaranteed</p>
    }
    <p class="display-6 p-3">Start game again</p>
    <form asp-controller="Game" asp-action="Index">
        <button type="submit" class="btn btn-primary w-25 p-2">Start game</button>
    </form>
</div>